<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="cxa16.com.shay.WalletActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <TextView
        android:id="@+id/title_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shaking In Progress"
        android:textColor="#444444"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_loading_view"
        android:layout_below="@id/title_wallet"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#fff"
        android:layout_centerInParent="true"
        app:mainColor="@color/colorPrimary"
        app:secondaryColor="@color/colorPrimary"
        app:textColor="@android:color/black" />

    <!--<ImageView-->
        <!--android:id="@+id/spinner"-->
        <!--android:layout_width="55dp"-->
        <!--android:layout_height="55dp"-->
        <!--android:layout_below="@+id/title_wallet"-->
        <!--android:layout_marginTop="12dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/load_spinner"-->
        <!--android:visibility="gone"-->
        <!--/>-->

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@+id/title_wallet"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Horizontal" />

    <TextView
        android:id="@+id/shaking_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_loading_view"
        android:textAlignment="center"
        android:text="Continue shaking the phones\nin a unique fashion until\nthe progress bar completes!"
        android:textColor="#444444"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


</RelativeLayout>
