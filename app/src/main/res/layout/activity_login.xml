<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="cxa16.com.shay.LoginActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <TextView
        android:id="@+id/title_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shay"
        android:textColor="#3f64a8"
        android:textSize="160sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/title_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment of Tomorrow"
        android:textColor="#444444"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-65dp"
        android:paddingLeft="-25dp"
        android:layout_below="@id/title_app"
        android:visibility="invisible"
        />


    <EditText android:id="@+id/uid_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:layout_below="@id/title_tag"
        android:inputType="text"
        />

    <EditText android:id="@+id/pwd_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_alignLeft="@id/uid_field"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/uid_field"
        android:width="200dp"
        android:inputType="textPassword"
        android:imeOptions="actionGo"
        />

    <Button
        android:id="@+id/button_login"
        style="?metaButtonBarButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pwd_field"
        android:layout_marginTop="20dp"
        android:background="#3f64a8"
        />

</RelativeLayout>
